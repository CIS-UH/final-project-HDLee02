<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <h1>Stocks</h1>
        <form action="/stocks" method="POST">
            <input type="text" name="stockname" placeholder="Stock Name" required>
            <input type="text" name="abbreviation" placeholder="Abbreviation" required>
            <input type="number" name="currentprice" placeholder="Current Price" required>
            <button type="submit">Add Stock</button>
        </form>
        <ul>
            <% stocks.forEach(function(stock) { %>
                <li><%= stock.stockname %> (<%= stock.abbreviation %>) - $<%= stock.currentprice %></li>
            <% }) %>
        </ul>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>